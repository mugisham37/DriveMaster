{
  "name": "adaptive-learning-platform",
  "version": "1.0.0",
  "description": "A production-ready, scalable mobile-first system for driving test preparation",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:auth\" \"npm run dev:user\" \"npm run dev:content\" \"npm run dev:scheduler\" \"npm run dev:web\"",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:user": "cd services/user-service && go run main.go",
    "dev:content": "cd services/content-service && npm run dev",
    "dev:scheduler": "cd services/scheduler-service && go run main.go",
    "dev:ml": "cd services/ml-service && python -m uvicorn main:app --reload",
    "dev:web": "cd apps/web && npm run dev",
    "build": "npm run build:services && npm run build:apps",
    "build:services": "concurrently \"npm run build:auth\" \"npm run build:content\" \"npm run build:user\" \"npm run build:scheduler\"",
    "build:apps": "concurrently \"npm run build:web\" \"npm run build:mobile\"",
    "build:auth": "cd services/auth-service && npm run build",
    "build:content": "cd services/content-service && npm run build",
    "build:user": "cd services/user-service && go build -o bin/user-service",
    "build:scheduler": "cd services/scheduler-service && go build -o bin/scheduler-service",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && flutter build apk",
    "test": "npm run test:services && npm run test:apps",
    "test:services": "concurrently \"npm run test:auth\" \"npm run test:content\" \"npm run test:user\" \"npm run test:scheduler\"",
    "test:apps": "concurrently \"npm run test:web\" \"npm run test:mobile\"",
    "test:auth": "cd services/auth-service && npm test",
    "test:content": "cd services/content-service && npm test",
    "test:user": "cd services/user-service && go test ./...",
    "test:scheduler": "cd services/scheduler-service && go test ./...",
    "test:web": "cd apps/web && npm test",
    "test:mobile": "cd apps/mobile && flutter test",
    "db:migrate": "cd packages/database && npm run migrate",
    "db:seed": "cd packages/database && npm run seed",
    "db:reset": "cd packages/database && npm run reset",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "npm run lint:services && npm run lint:apps",
    "lint:services": "concurrently \"npm run lint:auth\" \"npm run lint:content\"",
    "lint:apps": "cd apps/web && npm run lint",
    "lint:auth": "cd services/auth-service && npm run lint",
    "lint:content": "cd services/content-service && npm run lint",
    "spell-check": "cspell \"**/*.{ts,js,md,yml,yaml}\"",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "clean": "npm run clean:services && npm run clean:apps",
    "clean:services": "rm -rf services/*/node_modules services/*/dist services/*/bin",
    "clean:apps": "rm -rf apps/*/node_modules apps/*/.next apps/*/build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0",
    "cspell": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
