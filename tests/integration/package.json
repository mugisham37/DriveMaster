{
  "name": "adaptive-learning-integration-tests",
  "version": "1.0.0",
  "description": "Comprehensive integration tests for the Adaptive Learning Platform",
  "scripts": {
    "test": "jest --config=jest.config.js",
    "test:integration": "jest --config=jest.config.js --testPathPattern=integration",
    "test:e2e": "jest --config=jest.config.js --testPathPattern=e2e",
    "test:chaos": "jest --config=jest.config.js --testPathPattern=chaos",
    "test:coverage": "jest --config=jest.config.js --coverage",
    "test:watch": "jest --config=jest.config.js --watch",
    "setup:env": "docker-compose -f docker-compose.test.yml up -d",
    "teardown:env": "docker-compose -f docker-compose.test.yml down -v",
    "seed:data": "node scripts/seed-test-data.js"
  },
  "dependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "kafkajs": "^2.2.4",
    "redis": "^4.6.0",
    "pg": "^8.11.0",
    "uuid": "^9.0.0",
    "faker": "^6.6.6",
    "playwright": "^1.40.0",
    "k6": "^0.47.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.0",
    "@types/pg": "^8.10.0"
  }
}
