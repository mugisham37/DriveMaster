{
  "dashboard": {
    "id": null,
    "title": "DriveMaster Learning Analytics",
    "tags": ["drivemaster", "learning", "analytics"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Learning Effectiveness Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "avg_over_time(learning_effectiveness_score[1h])"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "User Engagement Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(user_session_duration_seconds)"
          },
          {
            "expr": "rate(user_sessions_total[1h])"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 3,
        "title": "Question Success Rate by Category",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(questions_correct_total[1h])) by (category) / sum(rate(questions_answered_total[1h])) by (category)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Adaptive Algorithm Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(bkt_knowledge_probability)"
          },
          {
            "expr": "avg(bandit_exploration_rate)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Spaced Repetition Effectiveness",
        "type": "graph",
        "targets": [
          {
            "expr": "avg(spaced_repetition_retention_rate)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "Content Performance Heatmap",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum(rate(content_interactions_total[1h])) by (content_id, difficulty_level)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 7,
        "title": "User Dropout Risk Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, dropout_risk_score_bucket)"
          },
          {
            "expr": "histogram_quantile(0.95, dropout_risk_score_bucket)"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 32
        }
      },
      {
        "id": 8,
        "title": "Notification Effectiveness",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(notifications_clicked_total[24h])) / sum(rate(notifications_sent_total[24h]))"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 0.1
                },
                {
                  "color": "green",
                  "value": 0.2
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "5m"
  }
}
