# DriveMaster Environment Configuration

# Service Configuration
NODE_ENV=development
SERVICE_NAME=drivemaster
SERVICE_VERSION=0.1.0
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=true
CORS_CREDENTIALS=true

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=drivemaster_dev
DB_USER=drivemaster
DB_PASSWORD=dev_password_123
DB_SSL=false
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_READY_CHECK=true

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=drivemaster-client
KAFKA_GROUP_ID=drivemaster-group
KAFKA_CONNECTION_TIMEOUT=3000
KAFKA_REQUEST_TIMEOUT=30000
KAFKA_INITIAL_RETRY_TIME=100
KAFKA_RETRIES=8

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_MAX_RETRIES=3
ELASTICSEARCH_REQUEST_TIMEOUT=30000
ELASTICSEARCH_PING_TIMEOUT=3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Service-specific ports
USER_SVC_PORT=3001
ADAPTIVE_SVC_PORT=3002
CONTENT_SVC_PORT=3003
ANALYTICS_SVC_PORT=3004
ENGAGEMENT_SVC_PORT=3005