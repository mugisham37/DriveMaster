{
  "extends": [
    "stylelint-config-standard"
  ],
  "plugins": [
    "stylelint-config-tailwindcss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "apply",
          "layer",
          "responsive",
          "screen",
          "variants",
          "tailwind"
        ]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "theme",
          "screen"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "ring",
          "ring-offset",
          "ring-color",
          "ring-opacity",
          "ring-offset-color",
          "ring-offset-width",
          "ring-width"
        ]
      }
    ]
  }
}