generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model UserKnowledgeState {
  userId        String
  conceptId     String
  mastery       Float
  lastUpdatedAt DateTime @default(now())

  @@id([userId, conceptId])
  @@index([lastUpdatedAt])
}

model LearningEvent {
  id             String   @id @default(cuid())
  userId         String
  conceptId      String
  correct        Boolean
  responseTimeMs Int?
  confidence     Float?
  createdAt      DateTime @default(now())

  @@index([userId, conceptId, createdAt])
}